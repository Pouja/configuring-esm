{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "types": ["node"],
        "baseUrl": ".",
        "outDir": "out-tsc",
        "rootDir": "src",
        "incremental": true,
        "isolatedModules": true,
        "composite": true,
        "noUncheckedSideEffectImports": true
    },
    "include": ["src/*/**.ts"]
}