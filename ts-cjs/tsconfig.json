{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "out-tsc",
        "rootDir": "src",
        "baseUrl": ".",
        "isolatedModules": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "composite": true,
        "moduleDetection": "force",
        "strict": true,
        "target": "ESNext",
        "types": ["node"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@pouja/lib": ["./src/lib/index.ts"]
        }
    },
    "include": ["**/*.ts"]
}